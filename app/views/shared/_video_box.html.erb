<transition name="video">
<div class="overlayplayer" :class="video==false? '' :'player'" v-if="video=='<%= @video.video_id %>'">
	<div  class="close"  v-on:click="removeoverlay"><%= image_tag("back.svg")%>回短片列表</div>
	<div class="close-bg" v-on:click="removeoverlay"></div>
	<div class="video-container">
	    <iframe  width="640" height="360" src="https://www.youtube.com/embed/<%= video.video_id %>?autoplay="  allowfullscreen  id="<%= @video.video_id %>">
	  	</iframe>
	</div>
</div>
</transition>


